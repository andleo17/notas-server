{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"lib": ["ES6", "ESNext"],
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
